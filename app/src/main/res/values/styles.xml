<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ScreenTitle">
        <item name="android:fontFamily">@font/actor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="ActionButton">
        <item name="android:tint">@color/gry01</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="FloatingActionButton" parent="Widget.Design.FloatingActionButton">
        <item name="fabSize">normal</item>
        <item name="android:tint">@color/wht02</item>
    </style>

</resources>
